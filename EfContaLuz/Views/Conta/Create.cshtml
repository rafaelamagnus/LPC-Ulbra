@model EfContaLuz.Models.Conta

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"/>
        </div>

        <div class="form-group">
            <label>Nome</label>
            <input  class="form-control"
                    type="text" name="nome"/>
        </div>

        <div class="form-group">
            <label>Numero Leitura</label>
            <input  class="form-control"
                    type="text" name="numLeitura"/>
        </div>
         <div class="form-group">
            <label>kw Gasto</label>
            <input  class="form-control"
                    type="text" name="kwGasto"/>
        </div>
         <div class="form-group">
            <label>Valor Pagar</label>
            <input  class="form-control"
                    type="text" name="valorPagar"/>
        </div>
         <div class="form-group">
            <label>Data Pagamento</label>
            <input  class="form-control"
                    type="text" name="dataPagamento"/>
        </div>
         <div class="form-group">
            <label>Media Consumo</label>
            <input  class="form-control"
                    type="text" name="mediaConsumo"/>
        </div>


        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>